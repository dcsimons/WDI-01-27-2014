<div class="container signup-container center">  
  <h1 class="signup-header">Sign Up!</h1>

  <div class="row">
    <div class="span6 offset3">
      <%= form_for(@user) do |f| %>
        <% unless @user.errors.count == 0   %>
          <div class="alert alert-error">
            The form contains <%= pluralize(@user.errors.count, "error") %>.
          </div>
          <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li>* <%= msg %></li>
          <% end %>
          </ul>
        <% end %>

        <%= f.label :name, class: "signup-label" %><br>
        <%= f.text_field :name, placeholder: "e.g., Mickey Mouse", class: "signup-field" %><br>

        <%= f.label :email, class: "signup-label" %><br>
        <%= f.text_field :email, placeholder: "Enter Email", class: "signup-field" %><br>

        <%= f.label :password, class: "signup-label" %><br>
        <%= f.password_field :password, class: "signup-field" %><br>

        <%= f.label :password_confirmation, "Confirm Password", class: "signup-label" %><br>
        <%= f.password_field :password_confirmation, class: "signup-field" %><br>

        <%= f.submit "Create my account", class: "btn btn-large btn-primary signup-btn" %>
      <% end %>
    </div>
  </div>
</div>
